<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://planinEventBrowse.caption"
        focusComponent="planinEventsTable"
        messagesPack="com.company.exceed.web.screens.planinevent">
    <data readOnly="true">
        <collection id="planinEventsDc"
                    class="com.company.exceed.entity.PlaninEvent">
            <view extends="_local"/>
            <loader id="planinEventsDl">
                <query>
                    <![CDATA[select e from exceed_PlaninEvent e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="planinEventsTable"
            spacing="true">
        <filter id="filter"
                applyTo="planinEventsTable"
                dataLoader="planinEventsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="planinEventsTable"
                    width="100%"
                    dataContainer="planinEventsDc">
            <actions>
            </actions>
            <columns>
                <column id="regNumber"/>
                <column id="vehicleNumber"/>
                <column id="status"/>
                <column id="state"/>
                <column id="eventDate"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
