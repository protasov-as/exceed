<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://clientEdit.caption"
        focusComponent="form"
        messagesPack="com.company.exceed.web.screens.client">
    <data>
        <instance id="clientDc"
                  class="com.company.exceed.entity.Client">
            <view extends="_local"/>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="clientDc">
            <column width="350px">
                <textField id="codeField" property="code"/>
                <textField id="nameField" property="name"/>
                <textField id="addressField" property="address"/>
                <textField id="contactField" property="contact"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
